<% provide :title, t("views.requests.edit") %>
<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <%= form_for [@book_request] do |f| %>
      <%= render "shared/error_message", object: @book_request %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit :Submit, class: "btn btn-success" %>
        <%= link_to t("views.requests.back"), book_requests_path,
          class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
