<% provide :title, t("views.requests.new") %>
<h2><%= t "views.requests.new" %></h2>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for current_user.book_requests.build do |f| %>
      <%= render "shared/error_message", object: @book_request %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group">
        <%= f.text_area :title, class: "form-control",
          placeholder: t "views.requests.title", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.text_area :author, class: "form-control",
          placeholder: t "views.requests.author", rows: 5 %>
      </div>
      <div class="actions text-center">
        <%= f.submit t("views.requests.send"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
