<div class = "favorite_books" >
  <p><span> <%= t("views.users.favorite")%> </span></p>
  <div id="list_book">
    <% @favorite_books.each do |favorite_book| %>
      <li class="list-group-item list-group-item-info">
        <% if favorite_book.picture.present? %>
          <%= link_to image_tag(favorite_book.picture,
            size: Settings.books.book_size), favorite_book %>
        <% else %>
          <%= link_to image_tag(Settings.books.default_book,
            size: Settings.books.book_size), admin_books_path %>
        <% end %>
        <%= link_to favorite_book.title, favorite_book %>
        <br/>
      </li>
    <% end %>
  </div>
  <%= paginate @favorite_books %>
</div>
